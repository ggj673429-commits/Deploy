# =============================================================================
# Gaming Platform - Environment Variables Template
# =============================================================================
# Copy this file to .env and fill in your values
#
# SECURITY WARNING: Never commit .env to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# DATABASE
# -----------------------------------------------------------------------------
# Production: Get from your hosting provider (Railway/Render/etc.)
# Development: postgresql://postgres:postgres@localhost:5432/portal_db
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/portal_db

# -----------------------------------------------------------------------------
# SECURITY & AUTHENTICATION
# -----------------------------------------------------------------------------
# Generate a secure random string (min 32 characters)
# Example: openssl rand -hex 32
JWT_SECRET_KEY=change-this-to-a-secure-random-string-min-32-chars

# -----------------------------------------------------------------------------
# TELEGRAM INTEGRATION (Optional)
# -----------------------------------------------------------------------------
# Get from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=

# Your Telegram chat ID
# Get from @userinfobot on Telegram
TELEGRAM_CHAT_ID=

# -----------------------------------------------------------------------------
# GAMES API INTEGRATION (External Game Provider)
# -----------------------------------------------------------------------------
# Base URL for the games automation API
AUTOMATION_BASE_URL=https://automation.joycegames.vip

# API authentication token (REQUIRED for game operations)
# Get this from your games provider
AUTOMATION_TOKEN=

# Optional: Custom endpoints (defaults shown)
# AUTOMATION_CREATE_ENDPOINT=/api/game/create-account/
# AUTOMATION_LOAD_ENDPOINT=/api/game/recharge/
# AUTOMATION_REDEEM_ENDPOINT=/api/game/redeem/
# AUTOMATION_GET_USER_BALANCE_ENDPOINT=/api/game/get-balance/{game_id}/{user_id}/

# Optional: Request timeout (milliseconds, default 15000)
# AUTOMATION_TIMEOUT_MS=15000

# Optional: Max retry attempts (default 3)
# AUTOMATION_MAX_RETRIES=3

# Optional: Base retry delay (seconds, default 1.0)
# AUTOMATION_RETRY_DELAY=1.0

# -----------------------------------------------------------------------------
# APPLICATION SETTINGS
# -----------------------------------------------------------------------------
ENVIRONMENT=development
DEBUG=false
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# CORS (Comma-separated origins)
# -----------------------------------------------------------------------------
# Development: http://localhost:3000
# Production: https://yourdomain.com
CORS_ORIGINS=http://localhost:3000

# -----------------------------------------------------------------------------
# FRONTEND
# -----------------------------------------------------------------------------
# Backend API URL for frontend to connect to
# Development: http://localhost:8001
# Production: https://your-backend-url.com
REACT_APP_BACKEND_URL=http://localhost:8001
